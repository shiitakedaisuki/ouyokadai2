<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <td><!--フォローしている人の一覧画面へのリンク-->
      フォロー数: 
      <%= link_to user_followings_path(user.id) do %>
        <%= user.followings.count %>
      <% end %>
      </td>
  </tr>
   <tr>
    <td><!--フォロワーの一覧画面へのリンク-->
      フォロワー数:
      <%= link_to user_followers_path(user.id) do %>
        <%= user.followers.count %>
      <% end %>
      </td>
      
  </tr>
   <tr>
     <% if current_user.following?(user) %>
          <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete,class: "btn btn-info btn-sm btn-block mb-3 sign_in" %></td>
        <% else %>
          <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post,class: "btn btn-success btn-sm btn-block sign_up" %></td>
        <% end %>
  </tr>
</table>
　
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>